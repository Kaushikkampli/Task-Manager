<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8">
        <title>Procastination Minimizer</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="styles.css">
    </head>

    <body>
        <div class = "box" id = "heading">
            <h1><%= title %></h1>
        </div>

        <div class = "box">
            <% tasks.forEach(function(task) { %>
                <div class = "item">   
                    <form action="/delete" method="POST">
                        <p>  
                            <input type="checkbox" name = "tick" value = "<%= task._id %>" onChange = "this.form.submit()" > 
                            <%= task.name %>
                        </p>
                    </form>
                </div>
            <% }) %>
        

            <form class = "item" action="/" method="POST">
                <input type="text" name="newtask" placeholder = "New Task" autocomplete = "off" required><br>
                <button type="submit">+</button>
            </form> 
        </div>

    </body>
</html>